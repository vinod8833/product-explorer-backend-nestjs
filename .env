# Docker Environment Configuration
# Copy this to .env for local development with Docker

NODE_ENV=development
PORT=3001
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Database Configuration (Docker)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=product_explorer
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/product_explorer?sslmode=disable

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Scraping Configuration
SCRAPING_DELAY_MIN=1000
SCRAPING_DELAY_MAX=3000
SCRAPING_CONCURRENT_LIMIT=3
SCRAPING_RETRY_ATTEMPTS=3

# World of Books Configuration
WOB_BASE_URL=https://www.worldofbooks.com
WOB_USER_AGENT=Mozilla/5.0 (compatible; ProductExplorer/1.0)

# Cache TTL Configuration (in seconds)
CACHE_TTL_NAVIGATION=3600
CACHE_TTL_CATEGORY=1800
CACHE_TTL_PRODUCT=900
CACHE_TTL_PRODUCT_DETAIL=600